{% extends 'admin/base.html.twig' %}

{% block contenu %}
<div class="row">
    <div class="col-12 elmt-std-margin">
        <h1>Supprimer un commentaire</h1>
        {% if msg is defined %}
            {% if msg == "commentSuccessfullDeleted" %}
                <div class="alert alert-success">
                    <p>Ce commentaire a été supprimé avec succès.</p>
                </div>
            {% endif %}
        {% endif %}
    </div>
</div>
{% endblock %}